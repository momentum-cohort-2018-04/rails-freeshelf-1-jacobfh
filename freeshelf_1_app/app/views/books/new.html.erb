<head><link rel="stylesheet" href="https://cdn.shoelace.style/1.0.0-beta24/shoelace.css"></head>
<h1>New Book</h1>
<div class="form-group">
<%= form_with model: @book, url: books_path, local: true do |form| %>

    <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
</p>
<p>
<%= form.fields_for :author_ids, Author.new do |author_field| %>
    <%= author_field.label :name, 'Author' %><br>
    <%= author_field.text_field :name %>
<% end %>
</p>
<p>
    <%= form.label :url %><br>
    <%= form.text_field :url %>
</p>
<p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
</p>

<p>
<%= form.submit %>
</p>
</div>

<%= link_to 'Back', books_path %>

<% end %>