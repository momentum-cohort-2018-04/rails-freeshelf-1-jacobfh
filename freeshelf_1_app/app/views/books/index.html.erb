<h1>List of free software development books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Language</th>
    <th>Url</th>
    <th>Description</th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.language %></td>
      <td><%= book.url %></td>
      <td><%= book.description %></td>
      <td><%= link_to 'Details', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Remove', book_path(book),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>

  <% end %>
  <%= link_to 'New book', new_book_path %>
</table>


